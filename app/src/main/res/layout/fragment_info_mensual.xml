<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controlador.InfoMensual">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNombreMesInfoMensual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diciembre"
                android:textSize="40sp"
                android:padding="@dimen/fab_margin"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/fab_margin">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Presupuesto:"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/editTextPresupuestoInfoMensual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:ems="6"
                    android:maxLength="7"
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/fab_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Total gastos:" />

                <TextView
                    android:id="@+id/textViewGastosAcumuladosInfoMensual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:text="220.39€" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewMesAnteriorInfoMensual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Noviembre"
                android:textSize="40sp"
                android:padding="@dimen/fab_margin"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/fab_margin" >

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Presupuesto:"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/textViewPresupuestoMesAnteriorInfoMensual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:text="40,5€"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/fab_margin" >

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total gastos:"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/textViewGastosMesAnteriorInfoMensual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35,7€"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/fab_margin"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="@dimen/fab_margin" >

                <Button
                    android:id="@+id/btnConfirmarInfoMensual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirmar Presupuesto"
                    android:padding="@dimen/fab_margin"
                    android:textSize="20sp"/>
            </LinearLayout>

        </LinearLayout>

</ScrollView>